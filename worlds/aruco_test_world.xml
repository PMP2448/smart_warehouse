<mvsim_world version="1.0">
  <simul_timestep>0.005</simul_timestep> 
  <gui> 
    <refresh_rate_ms>50</refresh_rate_ms> 
    <ortho>false</ortho> 
    <show_forces>false</show_forces>
  </gui>

  <element class="ground_grid">
    <floating>false</floating>
    <x_min>-10</x_min> <x_max>10</x_max>
    <y_min>-10</y_min> <y_max>10</y_max>
  </element>

  <element class="vertical_plane" name="mi_aruco_real">
    <x0>3.0</x0> <y0> 0.1</y0> 
    <x1>3.0</x1> <y1>-0.1</y1>
    
    <height>0.2</height>
    <z>0.1</z> <texture>../aruco_textures/aruco_texture_id0.png</texture>
    
    <cull_face>BACK</cull_face>
  </element>

  <block name="pared_fondo">
    <init_pose>3.11 0 0 0 0 0</init_pose>
    
    <shape>
      <pt>-0.10 -1.5</pt>
      <pt> 0.10 -1.5</pt>
      <pt> 0.10  1.5</pt>
      <pt>-0.10  1.5</pt>
      
      <height>2.0</height>
    </shape>
    
    <mass>1000</mass> <visual>
      <color>#DDDDDD</color> </visual>
  </block>

  <include file="$(ros2 pkg prefix mvsim)/share/mvsim/definitions/jackal.vehicle.xml"/>
  <vehicle name="robot1" class="jackal">
    <init_pose>-2 0 0</init_pose>  
    <init_vel>0 0 0</init_vel>
  </vehicle>

</mvsim_world>